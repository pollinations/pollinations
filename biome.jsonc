{
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "quoteProperties": "preserve",
            "quoteStyle": "double"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "complexity": {
                "useLiteralKeys": "off",
                "noBannedTypes": "off"
            },
            "correctness": {
                "useUniqueElementIds": "off"
            }
        }
    },
    "files": {
        "includes": [
            "**",
            // exclude dependencies and build assets
            "!node_modules",
            "!dist",
            // exclude autogenerated files
            "!**/worker-configuration.d.ts",
            "!**/better-auth.ts"
        ]
    }
}
