# GitHub OAuth (for login)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Auth
BETTER_AUTH_SECRET=your_better_auth_secret_at_least_32_chars

# Polar (subscription/billing) - get from sandbox.polar.sh for dev
POLAR_ACCESS_TOKEN=your_polar_sandbox_access_token
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret

# Tinybird (analytics)
TINYBIRD_ACCESS_TOKEN=your_tinybird_access_token
TINYBIRD_INGEST_TOKEN=your_tinybird_ingest_token
TINYBIRD_POLAR_INGEST_TOKEN=your_tinybird_polar_ingest_token
TINYBIRD_CRYPTO_INGEST_TOKEN=your_tinybird_crypto_ingest_token

# NOWPayments Crypto Payments (https://nowpayments.io)
# Get keys from: https://account.nowpayments.io (production) or https://account-sandbox.nowpayments.io (sandbox)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret
# Set to "sandbox" for testing, "production" for live payments
NOWPAYMENTS_ENV=sandbox

# Testing
TESTING_REFERRER=optional_testing_referrer
PLN_ENTER_TOKEN=optional_pln_enter_token

# ElevenLabs (text-to-speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# OVHcloud (Whisper speech-to-text, Qwen, Mistral)
OVHCLOUD_API_KEY=your_ovhcloud_api_key_here

# Tip: Run `sops decrypt secrets/dev.vars.json > .dev.vars` to get all secrets
