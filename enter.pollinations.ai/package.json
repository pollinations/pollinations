{
    "name": "pollinations-enter",
    "type": "module",
    "version": "1.0.0",
    "description": "Next generation auth service for pollinations.ai",
    "main": "src/index.ts",
    "scripts": {
        "typecheck": "tsc --noEmit",
        "dev": "sops -d .encrypted.dev.env > .dev.vars && vite dev",
        "dev:production": "sops -d .encrypted.prod.env > .dev.vars && CLOUDFLARE_ENV=production vite dev",
        "test": "npx vitest run",
        "gen:migrations": "npx drizzle-kit generate",
        "gen:auth-schema": "npx @better-auth/cli@latest generate --config betterAuth.config.ts --output src/db/schema/better-auth.ts",
        "gen:types:runtime": "sops -d .encrypted.dev.env > .dev.vars && wrangler types --include-env=false worker-runtime.d.ts",
        "gen:types:bindings": "sops -d .encrypted.dev.env > .dev.vars && wrangler types --include-runtime=false --env-interface CloudflareBindings worker-bindings.d.ts",
        "gen:types": "npm run gen:types:runtime && npm run gen:types:bindings",
        "migrate:production": "wrangler d1 migrations apply DB --remote --env production",
        "migrate:development": "wrangler d1 migrations apply DB --local",
        "build:production": "CLOUDFLARE_ENV=production vite build --mode=production",
        "deploy:production": "npm run build:production && wrangler deploy --env production",
        "push-secrets:staging": "sops exec-file --no-fifo .encrypted.staging.env 'npx wrangler secret bulk {} --env staging'",
        "push-secrets:production": "sops exec-file --no-fifo .encrypted.production.env 'npx wrangler secret bulk {} --env production'"
    },
    "dependencies": {
        "@ark-ui/react": "^5.27.1",
        "@hono-rate-limiter/cloudflare": "^0.2.2",
        "@hono/standard-validator": "^0.1.5",
        "@logtape/logtape": "^1.1.2",
        "@polar-sh/sdk": "^0.41.1",
        "@scalar/hono-api-reference": "^0.9.24",
        "@tanstack/react-router": "^1.134.15",
        "better-auth": "^1.3.17",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "drizzle-orm": "^0.44.7",
        "eventsource-parser": "^3.0.6",
        "hono": "^4.10.4",
        "hono-openapi": "^1.1.1",
        "hono-rate-limiter": "^0.4.2",
        "nanoid": "^5.1.6",
        "neverthrow": "^8.2.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-markdown": "^10.1.0",
        "remark-gfm": "^4.0.1",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.12",
        "unique-names-generator": "^4.7.1",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@better-auth/cli": "^1.3.34",
        "@cloudflare/vite-plugin": "^1.14.0",
        "@cloudflare/vitest-pool-workers": "^0.8.71",
        "@drizzle-team/brocli": "^0.11.0",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.17",
        "@tanstack/react-router-devtools": "^1.134.15",
        "@tanstack/router-plugin": "^1.134.15",
        "@types/node": "^24.10.0",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@vitejs/plugin-react": "^5.1.0",
        "drizzle-kit": "^0.31.6",
        "easymidi": "^3.1.0",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "vite": "^7.2.2",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4",
        "wrangler": "^4.46.0"
    }
}
