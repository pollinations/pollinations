{
    "name": "pollinations-enter",
    "type": "module",
    "version": "1.0.0",
    "description": "Next generation auth service for pollinations.ai",
    "main": "src/index.ts",
    "scripts": {
        "typecheck": "tsc --noEmit",
        "dev": "npm run decrypt-vars:dev && vite dev",
        "dev:production": "npm run decrypt-vars:production && CLOUDFLARE_ENV=production vite dev",
        "test": "npm run decrypt-vars:dev && vitest run",
        "gen:migrations": "drizzle-kit generate",
        "gen:auth-schema": "npx @better-auth/cli@latest generate --config betterAuth.config.ts --output src/db/schema/better-auth.ts",
        "gen:types:runtime": "wrangler types --include-env=false worker-runtime.d.ts'",
        "gen:types:bindings": "sops exec-file --output-type dotenv --no-fifo secrets/dev.vars.json 'wrangler types --env-file {} --include-runtime=false --env-interface CloudflareBindings worker-bindings.d.ts'",
        "gen:types": "npm run gen:types:runtime && npm run gen:types:bindings",
        "migrate:staging": "wrangler d1 migrations apply DB --remote --env staging",
        "migrate:production": "wrangler d1 migrations apply DB --remote --env production",
        "migrate:development": "wrangler d1 migrations apply DB --local",
        "build:staging": "CLOUDFLARE_ENV=staging vite build --mode=staging",
        "build:production": "CLOUDFLARE_ENV=production vite build --mode=production",
        "deploy:staging": "npm run build:staging && wrangler deploy",
        "deploy:production": "npm run build:production && wrangler deploy",
        "decrypt-vars:dev": "sops decrypt secrets/dev.vars.json --output-type dotenv > .dev.vars",
        "decrypt-vars:production": "sops decrypt secrets/prod.vars.json --output-type dotenv > .dev.vars",
        "push-secrets:staging": "sops exec-file --no-fifo secrets/staging.vars.json 'npx wrangler secret bulk {} --env staging'",
        "push-secrets:production": "sops exec-file --no-fifo secrets/prod.vars.json 'npx wrangler secret bulk {} --env production'"
    },
    "dependencies": {
        "@ark-ui/react": "^5.29.1",
        "@hono-rate-limiter/cloudflare": "^0.2.2",
        "@hono/standard-validator": "^0.1.5",
        "@logtape/logtape": "^1.2.0",
        "@polar-sh/sdk": "^0.41.5",
        "@scalar/hono-api-reference": "^0.9.25",
        "@tanstack/react-query": "^5.90.11",
        "@tanstack/react-router": "^1.139.3",
        "better-auth": "^1.3.17",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "drizzle-orm": "^0.44.7",
        "eventsource-parser": "^3.0.6",
        "hono": "^4.10.6",
        "hono-openapi": "^1.1.1",
        "hono-rate-limiter": "^0.4.2",
        "nanoid": "^5.1.6",
        "neverthrow": "^8.2.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-markdown": "^10.1.0",
        "remark-gfm": "^4.0.1",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "^4.1.12",
        "unique-names-generator": "^4.7.1",
        "viem": "^2.40.3",
        "wagmi": "^3.0.2",
        "x402": "^0.7.3",
        "x402-hono": "^0.7.3",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@better-auth/cli": "^1.4.1",
        "@cloudflare/vite-plugin": "^1.15.2",
        "@cloudflare/vitest-pool-workers": "^0.10.10",
        "@drizzle-team/brocli": "^0.11.0",
        "@hono/node-server": "^1.19.6",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.17",
        "@tanstack/react-router-devtools": "^1.139.3",
        "@tanstack/router-plugin": "^1.139.3",
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.1",
        "drizzle-kit": "^0.31.7",
        "easymidi": "^3.1.0",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "vite": "^7.2.4",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4",
        "wrangler": "^4.50.0"
    }
}
