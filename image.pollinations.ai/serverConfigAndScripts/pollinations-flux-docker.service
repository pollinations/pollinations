[Unit]
Description=Pollinations Flux Docker Service
After=docker.service
Requires=docker.service

[Service]
User=ubuntu
ExecStartPre=-/usr/bin/docker stop flux-svdquant
ExecStartPre=-/usr/bin/docker rm flux-svdquant
ExecStart=/usr/bin/docker run --name flux-svdquant --gpus all -p 8765:8765 -e PORT=8765 -e HF_HUB_ENABLE_HF_TRANSFER=1 -e PLN_IMAGE_BACKEND_TOKEN=${PLN_IMAGE_BACKEND_TOKEN} pollinations/flux-svdquant:latest
EnvironmentFile=-/home/ubuntu/pollinations/image.pollinations.ai/.env
ExecStop=/usr/bin/docker stop flux-svdquant
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
