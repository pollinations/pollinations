{
  "name": "pollinations-monorepo",
  "private": true,
  "workspaces": [
    "enter.pollinations.ai",
    "text.pollinations.ai",
    "image.pollinations.ai",
    "pollinations.ai"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix '[{name}]' --names 'enter,text,image,web' -c 'auto' 'npm run dev --workspace=enter.pollinations.ai' 'npm run dev --workspace=text.pollinations.ai' 'npm run dev --workspace=image.pollinations.ai' 'npm run dev --workspace=pollinations.ai'",
    "dev:enter": "npm run dev --workspace=enter.pollinations.ai",
    "dev:text": "npm run dev --workspace=text.pollinations.ai",
    "dev:image": "npm run dev --workspace=image.pollinations.ai",
    "dev:web": "npm run dev --workspace=pollinations.ai",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "test": "npm test --workspaces"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "lefthook": "^2.0.4"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
