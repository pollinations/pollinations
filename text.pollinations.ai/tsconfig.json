{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",

        // Allow JavaScript files without type checking
        "allowJs": true,
        "checkJs": false,
        "allowImportingTsExtensions": true,
        "noEmit": true,

        // Loose mode - no strict checking
        "strict": false,
        "noImplicitAny": false,

        // Standard settings
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,

        // Base path for imports
        "baseUrl": "."
    },
    "include": ["**/*.js", "**/*.ts", "../shared/**/*.ts"],
    "exclude": ["node_modules", "dist", "test"]
}
